/**
 *Abstract Class are special type of parent class which force the child to override the class
 * Abstract method - without  a body;
 * abstract method only be created in abstract class;
 **/

-----------------------------------------------------------------------------------------------------------------------
public abstract class MyPlan {
    void garden(){
        System.out.println("garden");
    }
    void sp(){
        System.out.println("swim");
    }
    void rooms(){
        System.out.println("3bhk");
    }

    abstract void location();
}

-----------------------------------------------------------------------------------------------------------------------
public class RocksPlan extends MyPlan{
    @Override
    void location() {
        System.out.println("spn in front of the building ");
    }
}


-----------------------------------------------------------------------------------------------------------------------
public class JohnsPlan extends MyPlan{
    @Override
    void location(){
        System.out.println("sp at top ..  garden around the building ");
    }


}


-----------------------------------------------------------------------------------------------------------------------

public class PlanService {
    public static void main(String[] args) {
        JohnsPlan jp = new JohnsPlan();
        jp.rooms();
        jp.sp();    //these three are concrete methods
        jp.garden();


        jp.location();  // these all are abstract methods

        RocksPlan rp = new RocksPlan();
        rp.rooms();
        rp.location();
    }
}

//an abstract method cannot be final other method can be final
//an abstract method cannot be private other method can be final


-----------------------------------------------------------------------------------------------------------------------
public abstract class MyPlan {
    final void garden(){
        System.out.println("garden");
    }
    void sp(){
        System.out.println("swim");
    }
    void rooms(){
        System.out.println("3bhk");
    }

   private abstract void location();  //error
//    abstract void location();
}

-----------------------------------------------------------------------------------------------------------------------

public abstract class MyPlan {
    final void garden(){
        System.out.println("garden");
    }
    void sp(){
        System.out.println("swim");
    }
    void rooms(){
        System.out.println("3bhk");
    }

   final abstract void location();
//    abstract void location();
}
