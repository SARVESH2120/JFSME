-----------------------------------------------------------------------------------------------------------------------
public abstract class Animal {
    //common behaviour
    void eat(){
        System.out.println("animal is eating");
    }
    //behaviour will differ for all the animal we create
    abstract  void sound();
}


-----------------------------------------------------------------------------------------------------------------------

public class Tiger extends Animal{
    @Override
    void sound() {
        System.out.println("Tiger roars");
    }
}

-----------------------------------------------------------------------------------------------------------------------
public class Cat extends Animal{
    @Override
    void sound(){
        System.out.println("cat meows");
    }
}

-----------------------------------------------------------------------------------------------------------------------
public class AnimalService {
    public static void main(String[] args) {
        Tiger tiger = new Tiger();
        tiger.eat();
        tiger.sound();

        Cat cat = new Cat();
        cat.eat();
        cat.sound();
    }
}


-----------------------------------------------------------------------------------------------------------------------
//DMD
public class AnimalService {
    public static void main(String[] args) {

        Animal animal  = new Tiger();  //DMD
        Animal animal1 = new Cat();
//object of the child animal  = new Tiger();
        //refering with the parent instance  Animal


        System.out.println(animal instanceof Tiger);

        animal.eat();
        animal.sound();

        animal1.eat();
        animal1.sound();
    }
}


-----------------------------------------------------------------------------------------------------------------------

-----------------------------------------------------------------------------------------------------------------------

public abstract class Animal {
    //common behaviour
    void eat(){
        System.out.println("animal is eating");
    }
    //behaviour will differ for all the animal we create
    abstract  void sound();

    abstract void move();
}

-----------------------------------------------------------------------------------------------------------------------
public class Tiger extends Animal{
    @Override
    void sound() {
        System.out.println("Tiger roars");
    }
    @Override
    void move(){
        System.out.println("Tiger runs fast in the jungle");
    }

    void hunt(){
        System.out.println("Tiger is hunter");
    }
}


-----------------------------------------------------------------------------------------------------------------------
public class Cat extends Animal{
    @Override
    void sound(){
        System.out.println("cat meows");
    }

    @Override
    void move(){
        System.out.println("Cat runs silently in the jungle around");
    }
}


-----------------------------------------------------------------------------------------------------------------------
public class Dog extends Animal{
    @Override
    void move(){
        System.out.println("Dogs runs");
    }
    @Override
    void sound(){
        System.out.println("Dogs make sounds bark");
    }
}


-----------------------------------------------------------------------------------------------------------------------
public class AnimalService {
    public static void main(String[] args) {

        Animal animal = new Tiger();
//        Animal animal = new Cat();
//        Animal animal = new Dog();

        AnimalMover animalMover = new AnimalMover();
        animalMover.moveAnimal(animal);


//        animal.hunt()  // u can only call super type methods (parents methods)

        Tiger t = new Tiger();
        t.hunt();

    }
}

-----------------------------------------------------------------------------------------------------------------------
public class AnimalMover {


    void moveAnimal(Animal animal){

        animal.move();
    }
}


