-----------------------------------------------------

public class ExceptionDemo {
    public static void main(String[] args) {
        System.out.println("line 1");
        int [] x = {2,0};

        try{
            try {
//                System.out.println(10/x[1])
                 System.out.println(10/x[0]);;
            }catch (ArithmeticException e){
                System.out.println("nested " + e + " " + e.getMessage());
            }

            System.out.println(10/x[0]);

            System.out.println("hello");

        }catch (ArithmeticException e){
            System.out.println("outer " + e + " " + e.getMessage());
        }catch (ArrayIndexOutOfBoundsException e){
            System.out.println("outer " + e + " " + e.getMessage());
        }

        System.out.println("line 3");



    }
}



-----------------------------------------------------
//finally gets executed irrespective of try or catch -- used to release the resources

public class ExceptionDemo {
    public static void main(String[] args) {
        System.out.println("line 1");


        try{
            System.out.println(10/0);
        }catch (Exception e){
            System.out.println("exception caught " + e + " " + e.getMessage());
        }finally {
            System.out.println("finally block");
            //close the db connection 
        }


        //below finally block everything gets executed
        System.out.println("line 3");



    }
}




