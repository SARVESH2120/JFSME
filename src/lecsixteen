public class Student {
    String name = "abc";
    final int rollno = 50;
    void showStudentdata(){
        name = "xyz";
//        rollno = 90;   // gives an error final var once initialized cannot be changed
        System.out.println(name);

    }

    public static void main(String[] args) {
        new Student().showStudentdata();
    }
}


=========================================================================================================

//final variable don't have a default value
//must be initialized and once initialized its final

public class Student {

    final int rollNo;

    Student (){
        rollNo =90; //only once we can initalized it
    }
    void showStudentData(){
        System.out.println(rollNo);
    }

    public static void main(String[] args) {
    new Student().showStudentData();

    }
}



=========================================================================================================

//local final variable

public class Student {

    

    Student (){
        
    }
    void showStudentData(){
        final int ROLLNO;  //declare in capital letter
        rollNo = 90;  /////////////local final variable have differents rule
        
        System.out.println(rollNo);
    }

    public static void main(String[] args) {
    new Student().showStudentData();

    }
}

